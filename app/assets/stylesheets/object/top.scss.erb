.top {
	height: 765px;
	background-image: url("<%= asset_path('top-sp.jpeg') %>");
	background-size: cover;
	opacity: 0.5;
	@include overTab {
		background-image: url("<%= asset_path('nyanko.jpg') %>");
		}

	.top-title {
		h2 {
			font-family: "Urbanist", sans-serif;
		}
		.text {
			display: none;
			@include overTab {
				display: block;
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translateY(-50%) translateX(-50%);
				text-align: center;
				font-size: 35px;
			}
		}

		.text-sp {
			position: absolute;
			top: 44%;
			left: 50%;
			transform: translateY(-50%) translateX(-50%);
			text-align: center;
			font-size: 35px;
			@include overTab {
				display: none;
			}
		}
	}
}
